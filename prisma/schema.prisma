generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  favorites Favorite[]
  
  @@map("users")
}

model Favorite {
  id           String   @id @default(cuid())
  userId       String
  restaurantId String   // place_id from Google Places
  name         String
  address      String
  rating       Float?
  priceLevel   String?
  cuisineType  String[]
  photoUrl     String?
  createdAt    DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, restaurantId])
  @@map("favorites")
}